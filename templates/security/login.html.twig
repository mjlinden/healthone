{% extends 'base.html.twig' %}
{% block title %}HealthOne | Login{% endblock %}
{% block body %}
    <div class="container">
        <header>
            <div class="header-row lead" >
                <h1 class="display-3">Health<span class="text-danger">One</span></h1>

            </div>
        </header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('homepage') }}">Sportcenter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link" href="{{ path('categories') }}">sportapparaten </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">registreren</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">contact</a>
                    </li>

                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_login')}}">inloggen</a>
                    </li>
                </ul>

            </div>
        </nav>

        <figure>
            <img alt="banner" class="img-fluid banner-img" src={{ asset('img/healthone-wide.png')}} />
        </figure>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="mt-3" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary mt-3" type="submit">
                Sign in
            </button>
        </form>
        <hr>
        <footer>
            <i class="bi bi-linkedin float-right img-thumbnail "   ></i>
            <i class="bi bi-twitter float-right img-thumbnail "   ></i>
            <i class="bi bi-pinterest float-right img-thumbnail "  ></i>

            <p class="clear pb-3  text-muted text-center">&copy;Afdeling software development Tinwerf 10, 2544 ED Den Haag.</p>
        </footer>
    </div>
{%  endblock %}